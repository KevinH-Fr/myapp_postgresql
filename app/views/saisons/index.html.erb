
<%# if user_signed_in? %>

<br/>

      <h1 class="fa-solid fa-arrows-spin fa-2xl fw-bold fs-1"> - Saisons </h1>  

      <br/> <br/> <hr/> <br/>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Nom</th>
        <th>Numero</th>
        <th>Periode</th>
        <th colspan="3">Actions</th>
     
      </tr>
    </thead>

    <tbody>
      <% @saisons.each do |saison| %>
            <tr>
            
              <td> <%= link_to saison.nom, saison %> </td>
              <td>  <%= saison.numeroSaison %> </td>
              <td>  <%= saison.periode %> </td>    
          
                <td width="5%">
                    <%= link_to '', saison, class:"fa-solid fa-eye btn btn-primary" %> 
                </td>
                <td width="5%">
                  <%= button_to '', saison, class:"fa-solid fa-trash-can btn btn-danger", method: :delete, :onclick => "return confirm('SÃ»r ?')" %>
                </td> 
                <td width="5%">
                    <%= link_to "", edit_saison_path(saison), class:"fa-regular fa-pen-to-square btn btn-secondary" %> 
                </td> 

            </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Nouvelle saison", new_saison_path, class:"btn btn-primary" %>


